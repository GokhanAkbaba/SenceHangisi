<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp">

    <android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp"

        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_image"
            android:src="@drawable/man"
            app:layout_heightPercent="14%"
            app:layout_marginLeftPercent="2%"
            app:layout_marginTopPercent="3%"
            app:layout_widthPercent="14%"></de.hdodenhof.circleimageview.CircleImageView>

        <TextView
            android:id="@+id/getuser"
            android:layout_width="fill_parent"
            android:layout_alignLeft="@+id/user_image"
            android:layout_alignStart="@+id/user_image"
            android:layout_below="@+id/getName"
            android:autoSizeTextType="uniform"
            android:text="\@gokhanakbaba"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp"
            app:layout_marginLeftPercent="22%" />

        <TextView
            android:id="@+id/getName"
            android:layout_width="fill_parent"
            android:autoSizeTextType="uniform"
            android:text="Gökhan Akbaba"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_marginLeftPercent="22%"
            app:layout_marginTopPercent="5%" />

        <TextView
            android:id="@+id/SoruAnket"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/getuser"
            android:autoSizeTextType="uniform"
            android:text="Sizce hangi ayakkabıyı almalıyım?"
            android:textColor="#000"
            android:textSize="15sp"
            app:layout_marginLeftPercent="22%"
            app:layout_marginRightPercent="2%" />

        <ImageView
            android:id="@+id/anketSecenekFoto1"
            android:layout_below="@+id/SoruAnket"
            android:background="@drawable/kapak"
            app:layout_heightPercent="30%"
            app:layout_marginLeftPercent="22%"
            app:layout_marginTopPercent="1%"
            app:layout_widthPercent="37%" />

        <ImageView
            android:id="@+id/anketSecenekFoto2"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/SoruAnket"
            android:background="@drawable/kapak"
            app:layout_heightPercent="30%"
            app:layout_marginRightPercent="3%"
            app:layout_marginTopPercent="1%"
            app:layout_widthPercent="37%" />

        <ImageView
            android:id="@+id/Oy1"
            android:layout_below="@+id/anketSecenekFoto1"
            android:src="@drawable/secenek_stil"
            app:layout_heightPercent="8%"
            app:layout_marginLeftPercent="22%"
            app:layout_marginTopPercent="1%"
            app:layout_widthPercent="12%" />

        <Button
            android:layout_below="@+id/anketSecenekFoto1"
            android:background="@drawable/puan_onay"
            android:text="95"
            app:layout_heightPercent="8%"
            app:layout_marginLeftPercent="45%"
            app:layout_marginTopPercent="1%"
            app:layout_widthPercent="12%" />


        <ImageView
            android:id="@+id/oy2"
            android:layout_below="@+id/anketSecenekFoto1"
            android:src="@drawable/secenek_bos_stil"
            app:layout_heightPercent="8%"
            app:layout_marginLeftPercent="61%"
            app:layout_marginTopPercent="1%"
            app:layout_widthPercent="12%" />

        <Button
            android:layout_below="@+id/anketSecenekFoto1"
            android:background="@drawable/puan_onay"
            android:text="70"
            app:layout_heightPercent="8%"
            app:layout_marginLeftPercent="84%"
            app:layout_marginTopPercent="1%"
            app:layout_widthPercent="12%" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/Oy1"
            android:background="@color/girisveguvenlik"
            app:layout_marginLeftPercent="23%"
            app:layout_marginTopPercent="1%"
            app:layout_widthPercent="35%" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/Oy1"
            android:background="@color/girisveguvenlik"
            app:layout_marginLeftPercent="61%"
            app:layout_marginTopPercent="1%"
            app:layout_widthPercent="35%" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="@color/girisveguvenlik"
            app:layout_marginTopPercent="15%" />

    </android.support.percent.PercentRelativeLayout>

</android.support.v7.widget.CardView>