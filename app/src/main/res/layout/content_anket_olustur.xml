<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="projem.sencehangisi.Activitys.AnketOlustur"
    tools:showIn="@layout/activity_anket_olustur"
    android:orientation="vertical"
    >

    <MultiAutoCompleteTextView
        android:id="@+id/multiAutoCompleteTextView"
        android:layout_width="fill_parent"
        android:layout_marginTop="70dp"
        android:background="#fff"
        android:gravity="left"
        android:hint="Sence Hangisi"
        android:paddingLeft="8dp"
        android:paddingTop="5dp"
        android:textCursorDrawable="@drawable/cursor_style"
        app:layout_heightPercent="15%"
        app:layout_marginLeftPercent="2%"
        app:layout_marginRightPercent="2%" />

    <ImageView
        android:id="@+id/imageView3"
        app:layout_marginTopPercent="33%"
        android:background="@color/girisveguvenlik"
        app:layout_heightPercent="50%"
        app:layout_marginLeftPercent="2%"
        app:layout_widthPercent="45%" />
    <ImageView
        android:id="@+id/imageView4"
        app:layout_marginTopPercent="50%"
        android:background="@drawable/anket_ekle"
        app:layout_heightPercent="12%"
        app:layout_marginLeftPercent="20%"
        app:layout_widthPercent="12%" />

    <ImageView
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        app:layout_marginTopPercent="33%"
        app:layout_marginRightPercent="2%"
        android:background="@color/girisveguvenlik"
        app:layout_heightPercent="50%"
        app:layout_marginLeftPercent="20%"
        app:layout_widthPercent="45%"
        android:id="@+id/imageView5" />
    <ImageView
        android:id="@+id/imageView6"
        app:layout_marginTopPercent="50%"
        android:background="@drawable/anket_ekle"
        app:layout_heightPercent="12%"
        app:layout_marginLeftPercent="70%"
        app:layout_widthPercent="12%" />
    <TextView
        android:text="Seçenek 2"
        android:autoSizeTextType="uniform"
        app:layout_widthPercent="23%"
        app:layout_heightPercent="5%"
        app:layout_marginLeftPercent="66%"
        app:layout_marginTopPercent="62%"
        />
    <TextView
        android:text="Seçenek 1"
        android:autoSizeTextType="uniform"
        app:layout_widthPercent="23%"
        app:layout_heightPercent="5%"
        app:layout_marginLeftPercent="16%"
        app:layout_marginTopPercent="62%"
        />
</android.support.percent.PercentRelativeLayout>
