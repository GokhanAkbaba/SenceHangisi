<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="projem.sencehangisi">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".KullaniciIslemleriActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".KullaniciProfiliActivity"
            android:alpha="0.25"
            android:label=""
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".AyarlarActivity"
            android:label="Ayarlar"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".AyarlarKullaniciAdi"
            android:label="Kullanıcı adını degiştir">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".AyarlarActivity" />
        </activity>
        <activity
            android:name=".AyarlarSifre"
            android:label="Şifreni değiştir">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".AyarlarActivity" />
        </activity>
        <activity
            android:name=".AyarlarEposta"
            android:label="@string/eposta_label">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".AyarlarActivity" />
        </activity>
        <activity
            android:name=".BildirimlerActivity"
            android:label="@string/bildirimler_label">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
    </application>

</manifest>